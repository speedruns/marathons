{% extends "layouts/main.html.j2" %}

{% block main %}
  <h1 class="title">Listing Categories</h1>

  <div class="field is-grouped">
    <p class="control">
      <a href="/categories/new" class="button is-primary">New Category</a>
    </p>
  </div>

  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th>Owner</th>
      </tr>
    </thead>

    <tbody>
      {% for category in categories %}
        <tr>
          <td><a href="/categories/{{category.id}}">{{ category.name }}</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
