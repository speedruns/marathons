{% extends "layouts/main.html.j2" %}

{% block main %}
  <h1 class="title">Listing Submissions</h1>

  <div class="field">
    <a class="button is-primary" href="/submit">Submit a Run</a>
  </div>

  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Runner</th>
        <th>Game / Category</th>
        <th>Estimate / PB</th>
        <th>Description</th>
        <th>Video</th>
      </tr>
    </thead>

    <tbody>
      {% for submission in submissions %}
        <tr>
          <td>
            {{ submission.account.name }}
            <br>
            {% if submission.account.twitch %}
              <a href="https://twitch.tv/{{submission.account.twitch}}"><i class="fab fa-twitch"></i></a>
            {% endif %}
            {% if submission.account.twitter %}
              <a href="https://twitter.com/{{submission.account.twitter}}"><i class="fab fa-twitter"></i></a>
            {% endif %}
          </td>

          <td>
            <a href="/games/{{submission.game_id}}">{{ submission.game.name }}</a>
            &ndash;
            <a href="/categories/{{submission.category_id}}">{{ submission.category.name }}</a>
          </td>

          <td>
            <strong>{{ submission.estimate }}</strong>
            <br>
            {{submission.pb}}
          </td>

          <td>{{ submission.description }}</td>
          <td>{{ submission.video_link|urlize(nofollow=true) }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
