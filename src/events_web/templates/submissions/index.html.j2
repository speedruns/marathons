{% extends "layouts/main.html.j2" %}

{% block main %}
  <h1 class="title">Submissions</h1>

  {% if conn.event.state == "accepting_submissions" %}
    <div class="field">
      <a class="button is-primary" href="/submit">Submit a Run</a>
    </div>
  {% endif %}

  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Runner</th>
        <th>Game / Category</th>
        <th>Estimate / PB</th>
        <th>Video</th>
      </tr>
    </thead>

    <tbody>
      {% if profile_submissions|length > 0 %}
        <tr>
          <th class="title is-6" colspan="10">Your Submissions</th>
        </tr>
        {% for submission in profile_submissions %}
          <tr>
            <td class="has-text-centered">
              <a href="/submissions/{{submission.id}}/edit"><i class="fa fa-edit"></i></a>
            </td>

            <td>
              <strong>{{ submission.game.name }}</strong>
              <br/>
              {{ submission.category_name }}
            </td>

            <td>
              <strong>{{ submission.estimate }}</strong>
              <br/>
              {{submission.pb}}
            </td>

            <td>{{ submission.video_link|urlize(nofollow=true) }}</td>
          </tr>
        {% endfor %}
      {% endif %}


      <tr>
        <th class="title is-6" colspan="10">All Submissions</th>
      </tr>
        {% for submission in all_submissions %}
          <tr>
            <td>
              {{ submission.account.name }}
              <br>
              {% if submission.account.twitch %}
                <a href="https://twitch.tv/{{submission.account.twitch}}"><i class="fab fa-twitch fa-fw"></i></a>
              {% endif %}
              {% if submission.account.twitter %}
                <a href="https://twitter.com/{{submission.account.twitter}}"><i class="fab fa-twitter fa-fw"></i></a>
              {% endif %}
            </td>

            <td>
              <strong>{{ submission.game.name }}</strong>
              <br/>
              {{ submission.category_name }}
            </td>

            <td>
              <strong>{{ submission.estimate }}</strong>
              <br/>
              {{submission.pb}}
            </td>

            <td>{{ submission.video_link|urlize(nofollow=true) }}</td>
          </tr>
        {% endfor %}
    </tbody>
  </table>
{% endblock %}
